									<div>
										<h1>REKOR İSTATİSTİKLER</h1>
									</div>
									<div class="DisplayFlex RekorTur">
										<div class="Rekorİstatistik DisplayFlex">
											<div>
												<h6>OYUN SKORU</h6>
											</div>
											
										</div>
										<div class="Rekorİstatistik DisplayFlex">
											<div>
												<h6> DRON 1 ÖLDÜRME SAYISI</h6>
											</div>
											
										</div>
										<div class="Rekorİstatistik DisplayFlex">
											<div>
												<h6>DRON 2 ÖLDÜRME SAYISI</h6>
											</div>
										</div>
										<div class="Rekorİstatistik DisplayFlex">
											<div>
												<h6>DRON 3 ÖLDÜRME SAYISI</h6>
											</div>
											
										</div>
										<div class="Rekorİstatistik DisplayFlex">
											<div>
												<h6>DRON 4 ÖLDÜRME SAYISI</h6>
											</div>
											
										</div>
									</div>
								</div>
							
								@foreach (ScoreTable item in ViewBag.liste)
								{
									<div class="RekorElemanSkor">
										<div class="DisplayFlex" style="align-items:start;">
											<hr class="hrEight Light">
										</div>
										<div class="DisplayFlex" style="justify-content:space-around;  position : relative;">
