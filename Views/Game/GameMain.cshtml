												<section>@item.BestScore</section>
											</div>
											<div class="RekorVeri">
												<section>@item.MaxDron1Kill</section>
											</div>
											<div class="RekorVeri">
												<section>@item.MaxDron2Kill</section>
											</div>
											<div class="RekorVeri">
												<section>@item.MaxDron3Kill</section>
											</div>
											<div class="RekorVeri">
												<section>@item.MaxDron4Kill</section>
											</div>
										</div>
										<div class="DisplayFlex" style="align-items:end;">
											<hr class="hrEight Light">
										</div>
									</div>

								}	
							
							</div>
						</div>
