				<div class="column GAMEMAINMENU">
					<div class="row-lg-2 GAMEMENUTITLE">
						<div style="position: relative;">
							<div class="NEONDIV" style="position: absolute;">
								<h1>PLAYSCRIBE'DA AIRBORNE RIVALS OYUNUNA HOŞGELDİN!</h1>
							</div>
						</div>
					</div>
					<div class="row-lg-5 GAMEMENUROW1">
						<button class="MenuButton NEONBUTON" id="STARTGAME">OYUNA BAŞLA</button>
					</div>
					<div class="row-lg-3 GAMEMENUROW2">
						<button class="MenuButton NEONBUTON LOGICBUTTON">OYUNUN MANTIĞI</button>
						<button class="MenuButton NEONBUTON" id="COSMETIC">KOZMETİK</button>
						<button class="MenuButton NEONBUTON" id="RECORDS" data-bs-toggle="offcanvas"
								data-bs-target="#RECORDTABLE" aria-controls="offcanvasRight">
							REKORLAR
						</button>
					</div>
					<div class="row-lg-2 GAMEMENUROW3">
						<button class="ESCAPE_BTN MenuButton NEONBUTON">GERİ DÖN</button>

						<a class="nav-link MenuButton" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("GameMain", "Game")" style="padding:0;height:100%; position: relative;">
							<button class="MenuButton NEONBUTON">OTURUM AÇ </button></a>
						
					</div>
				</div>

			</div>
			

		</div>
